parser: babel-eslint
parserOptions:
sourceType: module
ecmaFeatures:
jsx: true
plugins:
- import
- jsx-a11y
- react
extends:
- airbnb
- plugin:import/errors
- plugin:import/warnings
env:
browser: true
es6: true
node: true
amd: true
jest: true
globals:
contextComponent: false
rules:
padded-blocks: [2, { "blocks": "never", "classes": "never", "switches": "never" }]
# eslint-plugin-import
import/no-dynamic-require: 0
import/no-extraneous-dependencies: 0
import/order: ["error", { "newlines-between": "always", "groups": [["builtin", "external"], ["parent", "sibling", "index"]] }]
# eslint-plugin-jsx-a11y (consider turning these on)
jsx-a11y/accessible-emoji: 0
jsx-a11y/no-noninteractive-element-interactions: 0
jsx-a11y/label-has-for: 0
# eslint-plugin-react
react/jsx-filename-extension: [2, { "extensions": [".js", ".jsx"] }]
react/require-default-props: 0
react/no-find-dom-node: 0
# Fails on eslint 3.19.0.
# react/jsx-curly-spacing: [2, { "when": "never", "children": true }]
